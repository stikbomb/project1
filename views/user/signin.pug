extends layout
block title
    title Welcome
block menu
    nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
        a(class="navbar-brand", href="#") Navbar
        button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbar1", aria-controls="navbar1", aria-expanded="false", aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse", id="navbar1")
            ul(class="navbar-nav mr-auto")
                li(class="nav-item")
                    a(class="nav-link", href="/admin") Главная
                        span(class="sr-only") (current)
                li(class="nav-item active")
                    a(class="nav-link", href="/signin") Вход
block content
    // SignIn form
    p PLEASE SIGN IN
    div.form-group
        form(id="signin", name="signin", method="post", action="signin")
            label(class="sr-only")
            input(class="text" name="email" type="text" placeholder="e-mail")
            br
            label(class="sr-only")
            input(name="password" type="password" placeholder="password")
            br
            input(class="btn btn-primary mb-2", type="submit", value="Sign In")
    div(class="soc-auth")
        a(href="/auth/vk") Войти через Vk.com
    div
        p OR

    //SignUp form
    p SIGN UP
    div.form-group
        form(id="signup", name="signup", method="post", action="/signup")
            label(class="sr-only", for="email")
            input(class="text", name="email", type="email", placeholder="e-mail")
            br
            label(class="sr-only", for="firstname")
            input(name="firstname", type="text", placeholder="First name")
            br
            label(class="sr-only", for="lastname")
            input(name="lastname", type="text", placeholder="Last name")
            br
            label(class="sr-only", for="password")
            input(name="password", type="password", placeholder="password")
            br
            input(class="btn btn-primary mb-2" type="submit" value="Sign Up")